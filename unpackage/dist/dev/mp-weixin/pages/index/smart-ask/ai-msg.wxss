.rich-text-box {
  max-width: 100%;
}
.rich-text-box pre.hljs {
  padding: 5px 8px;
  margin: 5px 0;
  overflow: auto;
}
.rich-text-box table {
  border-spacing: 0;
}
.rich-text-box th,
.rich-text-box td {
  border: 1px solid #666;
  padding: 3px 5px;
}
.cursor {
  display: none;
}
.show-cursor .cursor {
  display: inline-block;
  color: #65bbdb;
  font-weight: bold;
  animation: blinking 1s infinite;
}
@keyframes blinking {
from {
    opacity: 1;
}
to {
    opacity: 0;
}
}
.msg-item {
  position: relative;
  width: 100%;
  flex-direction: column;
}
.chat-message {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
}
.chat-message-container {
  max-width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: flex-start;
}
.chat-message-header {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
}
.chat-message-header .chat-message-avatar {
  width: 84rpx;
  height: 84rpx;
}
.chat-message-item {
  box-sizing: border-box;
  max-width: 100%;
  margin-top: 10px;
  border-radius: 10px;
  background-color: #ffffff;
  padding: 10px;
  font-size: 14px;
  -webkit-user-select: text;
          user-select: text;
  word-break: break-word;
  position: relative;
  transition: all ease 0.3s;
}
.chat-message-action-date {
  font-size: 12px;
  opacity: 0.2;
  white-space: nowrap;
  transition: all ease 0.6s;
  color: #303030;
  text-align: right;
  width: 100%;
  box-sizing: border-box;
  padding-right: 10px;
  pointer-events: none;
  z-index: 1;
}
.chat-message-user {
  display: flex;
  flex-direction: row-reverse;
}
.chat-message-user .chat-message-container {
  align-items: flex-end;
}
.chat-message-user .chat-message-header {
  flex-direction: row-reverse;
}
.chat-message-user .chat-message-item {
  background-color: #3DBEDF;
  color: #FFFFFF;
}
.loading-icon {
  width: 60rpx;
  height: 20rpx;
}